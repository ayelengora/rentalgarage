<div class="container">
 <div class="log-card mt-4">
    <h2 class="text-center">Iniciar Sesion</h2>
    <div class="form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: "Ingresa tu mail:",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: "Ingresa tu contraseÃ±a:",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Recordar cuenta", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Iniciar Sesion", class:"btn btn-outline-dark mb-2" %>
    </div>
  <% end %>
  </div>
 <p class="text-center"> No tenes cuenta ?  <%= render "devise/shared/links" %> </p>
</div>
</div>
