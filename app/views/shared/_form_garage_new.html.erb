<div class="container">
  <div id="form_garage_new"class="log-card mt-3">
    <h3 id="tit_new_garage"class="textito text-center">Nuevo Garage</h3>
    <div class="form">
      <div class="form-inputs">
        <%= simple_form_for @garage do |f| %>
          <%= f.input :title, label:"Título:", required: false %>
          <%= f.input :phone_number, label:"Teléfono:", required: false %>
          <%= f.input :address, label:"Dirección:", required: false %>
          <%= f.input :dimensions, label:"Dimensiones:", required: false %>
          <%= f.input :price_per_day, label:"Precio por día:", required: false %>
          <%= f.input :description, label:"Descripción:", required: false %>
          <%= f.input :photo, as: :file, label:"Agregá una imagen:", required: false %>
          <%= f.button :submit, label:"Agregar", class: "btn btn-outline-dark" %> 
          <%= link_to "Restablecer", "", class: "btn btn-outline-warning"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

